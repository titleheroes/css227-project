<%- include('../partials/header.ejs') %>

<!-- Featured -->
<div id="featured" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <!-- First movie -->\\
        <div class="carousel-item active">
            <img src="/images/movies/home/mortal-kombat.png" alt="" width="100%" height="400px" style="object-fit: cover;">
            <div class="container" href="">
                <div class="carousel-caption text-start">
                    <h1>Mortal Kombat</h1>
                </div>
            </div>
        </div>

        <!-- Second movie -->
        <div class="carousel-item">
            <img src="/images/movies/home/nobody.png" alt="" width="100%" height="400px" style="object-fit: cover;">
            <div class="container">
                <div class="carousel-caption text-start">
                    <h1>Nobody</h1>
                </div>
            </div>
        </div>

        <!-- Third movie -->
        <div class="carousel-item">
            <img src="/images/movies/home/doraemon.png" alt="" width="100%" height="400px" style="object-fit: cover;">
            <div class="container">
                <div class="carousel-caption text-start">
                    <h1>Stand by me Doraemon 2</h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Prev Button -->
    <button class="carousel-control-prev" type="button" data-bs-target="#featured" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <!-- Next Button -->
    <button class="carousel-control-next" type="button" data-bs-target="#featured" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!-- End of Featured -->

<!-- ---------------------------------------- -->

<!-- Now showing -->
<!-- Banner -->
<div class="container-fluid bg-dark px-3 pt-4" style="height: 75px;">
    <h5 style="color: white; text-transform: uppercase;">
        &emsp;
        <span class="dot" style="background-color: rgb(255, 0, 0); margin-bottom: 1px;"></span>
      Now showing
    </h5>
</div>
<!-- End of Banner -->

<!-- Poster -->
<div class="swiper-container nowShowing px-4">
    <div class="swiper-wrapper py-2">
        <% Movies.forEach(function(movie){ %>
            <div class="swiper-slide" style="width: 200px; height: 320px;">
                <div class="card card-cover text-white bg-dark rounded-5 shadow-lg h-100">
                    <a href="/movies/<%= movie._id %>">
                        <img src="<%= movie.image %>" width="100%" height="250px" style="object-fit: cover;">
                        <p  class="lh-1 text-center pt-2 mx-3 text-white text-shadow-1"
                            style="font-size:calc(100% + 0.25vw + 0.25vh)">
                            <%= movie.name %>
                        </p>
                    </a>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<!-- End of Poster -->
<!-- End of Now showing -->

<!-- ---------------------------------------- -->

<!-- Rank movie -->
<!-- Banner -->
<div class="container-fluid bg-dark px-3 pt-4" style="height: 75px;">
    <h5 style="color: white; text-transform: uppercase;">
        &emsp;
        <span class="dot" style="background-color: rgb(255, 174, 0); margin-bottom: 1px;"></span>
      Ticketango's Choices
    </h5>
</div>
<!-- End of Banner -->

<!-- Poster -->
<div class="swiper-container sortMovies" style="padding-left: 100px; padding-right: 100px">
    <div class="swiper-wrapper py-2">
        <% var i = 1; Sort.forEach(function(movie){ %>
            <div class="swiper-slide" style="width: 200px; height: 320px;">
                <div class="card card-cover text-white bg-dark rounded-5 shadow-lg h-100">
                    <a href="/movies/<%= movie._id %>">
                        <p class="rank-no"><%= i %></p>
                        <img src="<%= movie.image %>" width="100%" height="250px" style="object-fit: cover;">
                        <p  class="lh-1 text-center pt-2 mx-3 text-white text-shadow-1"
                            style="font-size:calc(100% + 0.25vw + 0.25vh)">
                            <%= movie.name %>
                        </p>
                    </a>
                </div>
            </div>
        <% i++; }); %>
    </div>
</div>
<!-- End of Poster -->
<!-- End of Rank movie -->

