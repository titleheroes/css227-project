<%- include('../partials/header.ejs') %>

<!-- Banner -->

<div class="container-fluid d-flex flex-row px-3 pt-4" style="height: 75px; background-color: rgb(0, 0, 0);">
    &emsp;
    <h5 style="color: white; text-transform: uppercase;">
        <span class="dot" style="background-color: rgb(255, 0, 98); margin-bottom: 1px;"></span>
        &nbsp;Edit Movies
    </h5>
</div>
<form action="/movies/<%= Movies._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="container-fluid bg-dark pt-1" style="height: 100%; width: 100%;">
        <div class="container-fluid mt-5 mb-5" style="width: 800px;">
            
            <div class="mb-5">
                <h5 style="color: white;">Name</h5>
                <input type="text" class="form-control" name="movies[name]" placeholder="<%= Movies.name %>" value="<%= Movies.name %>">
            </div>
            <h5 class="mb-3" style="color: white;">Description</h5>
            <div class="mb-5 mx-3">
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Genre</label>
                    <input type="text" class="form-control" name="movies[genre]" placeholder="<%= Movies.genre %>" value="<%= Movies.genre %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Director</label>
                    <input type="text" class="form-control" name="movies[director]" placeholder="<%= Movies.director %>" value="<%= Movies.director %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Date</label>
                    <input type="text" class="form-control" name="movies[date]" placeholder="<%= Movies.date %>" value="<%= Movies.date %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Runtime</label>
                    <input type="number" class="form-control" name="movies[runtime]" placeholder="<%= Movies.runtime %>" value="<%= Movies.runtime %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Score</label>
                    <input type="number" class="form-control" name="movies[score]" placeholder="<%= Movies.score %>" value="<%= Movies.score %>">
                </div>
            </div>

            <h5 class="mb-3" style="color: white;">Media</h5>
            <div class="mb-5 mx-3">       
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Poster</label>
                    <img src="<%= Movies.image %>" height="300px" style="object-fit: cover;">
                    <input type="file" class="form-control" name="image" accept="image/*">
            </div>
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Logo</label>
                    <img src="<%= Movies.logo %>" height="300px" style="object-fit: cover;">
                    <input type="file" class="form-control" name="logo" accept="image/*">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Big scale picture</label>
                    <img src="<%= Movies.banner %>" height="300px" style="object-fit: cover;">
                    <input type="file" class="form-control" name="banner" accept="image/*">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Trailer</label>
                    <input type="url" class="form-control" name="movies[trailer]" placeholder="<%= Movies.trailer %>" value="<%= Movies.trailer %>">
                </div>
            </div>

            <div style="height: 45px;"></div>
            <div class="container-fluid" style="height: 100%; position: relative;">
                <button type="submit" style="height: 50px; width: 100px; bottom: 15px; right: 15px; position: absolute;">Submit</button>
            </div>
                
        </div>
    </div>
</form>


<%- include('../partials/footer.ejs') %>